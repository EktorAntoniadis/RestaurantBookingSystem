@page
@model ReservationsModel
@{
    ViewData["Reservations"] = "Reservations";
    Layout = "_RestaurantUserLayout";
}

<h2>Reservations</h2>

<form method="post">
    <div>
        <label asp-for="NewReservation.Name"></label>
        <input asp-for="NewReservation.Name" />
        <span asp-validation-for="NewReservation.Name"></span>
    </div>
    <div>
        <label asp-for="NewReservation.Date"></label>
        <input asp-for="NewReservation.Date" type="date" />
        <span asp-validation-for="NewReservation.Date"></span>
    </div>
    <div>
        <label asp-for="NewReservation.Time"></label>
        <input asp-for="NewReservation.Time" type="time" />
        <span asp-validation-for="NewReservation.Time"></span>
    </div>
    <button type="submit">Add Reservation</button>
</form>

<h3>Existing Reservations</h3>
<ul>
    @foreach (var reservation in Model.Reservations)
    {
        <li>@reservation.Name - @reservation.Date @reservation.Time</li>
    }
</ul>

