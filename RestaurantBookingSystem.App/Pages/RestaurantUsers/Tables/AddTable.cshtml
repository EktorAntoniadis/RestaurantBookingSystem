@page
@model RestaurantBookingSystem.App.Pages.RestaurantUsers.Tables.AddTableModel
@{
    ViewData["Add Table"] = "Add Table";
    Layout = "_RestaurantUserLayout";
}

@section EmployeeSideBar {
    <partial name="RestaurantUsers/_EmployeeSideBar" />
}

<h1>Add table</h1>
<form method="post" asp-page-handler="AddNewTable">
    <input type="hidden" asp-for="AddTable.RestaurantId" />
    <input type="hidden" asp-for="AddTable.TableStatusId" />
   
    <div class="form-group mb-3">
        <label asp-for="AddTable.TableName" class="form-label">Table Name</label>
        <input asp-for="AddTable.TableName" type="text" class="form-control" placeholder="Type the table name">        
    </div>

    <div class="form-group mb-3">
        <label asp-for="AddTable.NumberOfPeople" class="form-label">Number Of People</label>
        <input asp-for="AddTable.NumberOfPeople" class="form-control" placeholder="Type the number of people"/>        
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-info">Add Table</button>
        <a asp-page="/RestaurantUsers/Index" asp-route-view="_Tables" class="btn btn-secondary">Back</a>
    </div>            
</form>