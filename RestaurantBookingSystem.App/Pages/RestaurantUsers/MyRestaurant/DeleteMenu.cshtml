@page "{id:int}"
@model RestaurantBookingSystem.App.Pages.Administration.Restaurants.DeleteMenuModel
@{
    Layout = "_RestaurantUserLayout";
}

@section EmployeeSideBar {
    <partial name="RestaurantUsers/_EmployeeSideBar" />
}

<h2>Are you sure you want to delete this menu?</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.Restaurant.Menu.Id" name="menuId" />
    <dl class="row">
        <dt class="col-sm-2">Menu Name</dt>
        <dd class="col-sm-10">@Model.Restaurant.Menu.Name</dd>

        <dt class="col-sm-2">Menu Description</dt>
        <dd class="col-sm-10">@Model.Restaurant.Menu.Description</dd>
    </dl>
    <div class="form-group mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Administration/Index" asp-route-view="_Restaurants" class="btn btn-secondary">Cancel</a>
    </div>
</form>
