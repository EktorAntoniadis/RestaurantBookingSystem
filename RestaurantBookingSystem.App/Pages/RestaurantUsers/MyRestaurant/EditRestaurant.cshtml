@page "{id:int}"
@model EditRestaurantModel
@{
    Layout = "_RestaurantUserLayout";
}

@section EmployeeSideBar {
    <partial name="RestaurantUsers/_EmployeeSideBar" />
}

<h2>Edit Restaurant</h2>

<form method="post" asp-page-handler="EditMyRestaurant">
    <input type="hidden" asp-for="EditRestaurant.Id" />

    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.Name">Name</label>
        <input type="text" asp-for="EditRestaurant.Name" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.Address">Address</label>
        <input type="text" asp-for="EditRestaurant.Address" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.City">City</label>
        <input type="text" asp-for="EditRestaurant.City" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.Country"></label>
        <input type="text" asp-for="EditRestaurant.Country" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.BusinessRegistrationNumber"></label>
        <input type="text" asp-for="EditRestaurant.BusinessRegistrationNumber" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.Phone"></label>
        <input type="text" asp-for="EditRestaurant.Phone" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="EditRestaurant.PostalCode"></label>
        <input type="text" asp-for="EditRestaurant.PostalCode" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/RestaurantUsers/Index" class="btn btn-secondary" asp-route-view="_MyRestaurant">Back</a>
</form>