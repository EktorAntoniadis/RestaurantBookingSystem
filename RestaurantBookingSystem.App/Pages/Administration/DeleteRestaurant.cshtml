@page "{id:int}"
@model RestaurantBookingSystem.Pages.Restaurants.DeleteRestaurantModel
@{
    ViewData["Title"] = "Delete Restaurant";
}

<h2>Are you sure you want to delete this restaurant?</h2>
<h3>@Model.DeleteRestaurant.Address, @Model.DeleteRestaurant.City, @Model.DeleteRestaurant.Country</h3>

<form method="post">
    <input type="hidden" asp-for="DeleteRestaurant.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
