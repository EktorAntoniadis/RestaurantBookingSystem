@page
@model RestaurantBookingSystem.App.Pages.Administration.RolesPermissions.DeletePermissionModel
@{
    ViewData["Title"] = "Delete Permission";
}

<h1>Delete Permission</h1>

<h3>Are you sure you want to delete this permission?</h3>
<form method="post">
    <div>
        <input type="hidden" asp-for="DeletePermission.Id" />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.DeletePermission.Name</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Model.DeletePermission.Description</dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Administration/Index" class="btn btn-secondary">Cancel</a>
</form>