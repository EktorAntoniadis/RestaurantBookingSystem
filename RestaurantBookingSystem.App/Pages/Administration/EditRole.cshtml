@page
@model RestaurantBookingSystem.App.Pages.Administration.EditRoleModel
@{
    Layout = "_AdminLayout";
}


@section AdminSideBar {
    <partial name="Administration/_AdminSidebar" />
}

<h1> Edit role page</h1>

@if (Model.EditRole != null)
{
    <h3>Edit Role</h3>
    <form method="post" asp-page-handler="EditRole" id="editRoleForm" class="justify-content-center align-items-center gap-3">
        <div class="mt-4">
            <input hidden asp-for="EditRole.Id" />
            <div class="form-group mt-3">
                <label asp-for="EditRole.Name">Name</label>
                <input class="form-control" asp-for="EditRole.Name" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="EditRole.Description">Description</label>
                <textarea class="form-control" asp-for="EditRole.Description"></textarea>
            </div>
            <di class="form-group mt-3">
                <label asp-for="EditRole.Permissions">Permissions</label>
               @foreach(var permission in Model.Permissions){
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" value="@permission.Id" name="SelectedPermissionIds"
                        checked="@(Model.SelectedPermissionIds.Contains(permission.Id))"/>
                        <label class="form-check-label" for="SelectedPermissionIds">@permission.Name</label>
                    </div>
               }
            </di>
            <button type="submit" class="btn btn-primary mt-3">Edit Role</button>
        </div>
    </form>
}