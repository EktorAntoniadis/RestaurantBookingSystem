@page
@model RestaurantBookingSystem.App.Pages.Administration.EditPermissionModel
@{
    Layout = "_AdminLayout";
}


@section AdminSideBar {
    <partial name="Administration/_AdminSidebar" />
}

<h1> Edit permission page</h1>

@if (Model.EditPermission != null)
{
    <h3>Edit Role</h3>
    <form method="post" asp-page-handler="EditPermission" id="editPermissionForm" class="justify-content-center align-items-center gap-3">
        <div class="mt-4">
            <input hidden asp-for="EditPermission.Id" />
            <div class="form-group mt-3">
                <label asp-for="EditPermission.Name">Name</label>
                <input class="form-control" asp-for="EditPermission.Name" />
            </div>
            <div class="form-group mt-3">
                <label asp-for="EditPermission.Description">Description</label>
                <textarea class="form-control" asp-for="EditPermission.Description"></textarea>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Edit Permission</button>
        </div>
    </form>
}