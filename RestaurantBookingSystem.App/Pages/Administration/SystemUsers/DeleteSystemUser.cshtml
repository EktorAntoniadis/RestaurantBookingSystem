@page "{id:int}"
@model RestaurantBookingSystem.App.Pages.Administration.SystemUsers.DeleteSystemUserModel
@{
    Layout = "_AdminLayout";
}

@section AdminSideBar {
    <partial name="Administration/_AdminSidebar" />
}

<h1>Delete SystemUser</h1>

<h3>Are you sure you want to delete this systemUser?</h3>
<form method="post">
    <div>
        <input type="hidden" asp-for="DeleteSystemUser.Id" />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.DeleteSystemUser.FirstName</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Model.DeleteSystemUser.LastName</dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Administration/Index" asp-route-view="_SystemUsers" class="btn btn-secondary">Cancel</a>
</form>