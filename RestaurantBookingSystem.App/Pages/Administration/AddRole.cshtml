@page
@model RestaurantBookingSystem.App.Pages.Administration.AddRoleModel
@{
    Layout = "_AdminLayout";
}

@section AdminSideBar {
    <partial name="Administration/_AdminSidebar" />
}

<h1> Add role </h1>
<form method="post" asp-page-handler="AddNewRole">
    <div class="mt-4">
        <div class="row">
            <div class="col-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="NewRole.Name">Name</label>
                    <input class="form-control" type="text" asp-for="NewRole.Name" value="@Model.NewRole.Name" />
                </div>
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="NewRole.Description">Description</label>
                    <textarea asp-for="NewRole.Description" class="form-control"></textarea>
                </div>
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="NewRole.Permissions">Permissions for the role</label>
                    <select asp-for="SelectedPermissionIds" class="form-control" multiple>
                        @foreach(var permission in Model.Permissions){
                            <option value="@permission.Id">@permission.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <a asp-page="/Administration/Index" asp-route-view="_RolesPermissions" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Add New Role</button>
        </div>
    </div>
</form>