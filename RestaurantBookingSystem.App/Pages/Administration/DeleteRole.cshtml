@page
@model RestaurantBookingSystem.App.Pages.Administration.DeleteRoleModel
@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<h3>Are you sure you want to delete this role?</h3>
<form method="post">
    <div>
       
        <input type="hidden" asp-for="DeleteRole.Id" />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.DeleteRole.Name</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Model.DeleteRole.Description</dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Administration/Index" class="btn btn-secondary">Cancel</a>
</form>